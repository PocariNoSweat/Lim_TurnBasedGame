<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Intro_screen">


    <Button
        android:id="@+id/btnEndTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="End Turn"
        app:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtCharName" />

    <TextView
        android:id="@+id/txtCharName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:text="My Character"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEnemyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Enemy Name"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCharHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Character HP"
        android:textColor="#D80000"
        app:layout_constraintStart_toStartOf="@+id/txtHerodps"
        app:layout_constraintTop_toBottomOf="@+id/txtHerodps" />

    <TextView
        android:id="@+id/txtHerodps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Hero Damage"
        android:textColor="#FF9A00"
        app:layout_constraintStart_toStartOf="@+id/txtCharName"
        app:layout_constraintTop_toBottomOf="@+id/txtCharName" />

    <TextView
        android:id="@+id/txtEnemydps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Enemy Damage"
        android:textColor="#FF9A00"
        app:layout_constraintEnd_toEndOf="@+id/txtEnemyName"
        app:layout_constraintTop_toBottomOf="@+id/txtEnemyName" />

    <TextView
        android:id="@+id/txtEnemyHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Enemy HP"
        android:textColor="#D80000"
        app:layout_constraintEnd_toEndOf="@+id/txtEnemydps"
        app:layout_constraintTop_toBottomOf="@+id/txtEnemydps" />

    <TextView
        android:id="@+id/txtCombatLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Combat Log"
        android:textStyle="bold"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtskill1mp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginBottom="28dp"
        android:text="Stun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtskill2mp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:text="Passive"
        app:layout_constraintBottom_toBottomOf="@+id/txtskill1mp"
        app:layout_constraintStart_toEndOf="@+id/txtskill1mp" />

    <TextView
        android:id="@+id/txtskill3mp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="Passive"
        app:layout_constraintBottom_toBottomOf="@+id/txtskill2mp"
        app:layout_constraintStart_toEndOf="@+id/txtskill2mp" />

    <ImageButton
        android:id="@+id/btnskill1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="48dp"
        android:clickable="true"
        android:scaleType="fitXY"
        android:text="skill1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/skillicon1" />

    <ImageButton
        android:id="@+id/btnskill2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:clickable="false"
        android:scaleType="fitXY"
        android:text="skill2"
        app:layout_constraintBottom_toBottomOf="@+id/btnskill1"
        app:layout_constraintStart_toEndOf="@+id/btnskill1"
        app:srcCompat="@drawable/skillicon2" />

    <ImageButton
        android:id="@+id/btnskill3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:clickable="false"
        android:scaleType="fitXY"
        android:text="skill3"
        app:layout_constraintBottom_toBottomOf="@+id/btnskill2"
        app:layout_constraintStart_toEndOf="@+id/btnskill2"
        app:srcCompat="@drawable/skillicon3" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="456dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/enemy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="128dp"
        android:src="@drawable/aleg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>